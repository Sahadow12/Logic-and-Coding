import java.util.Scanner;

public class Conjecture_Collatz {

    public static void main(String[] args) {
int number;       
System.out.println("Conclusion:");
        
Scanner reader = new Scanner(System.in);
        System.out.println("Enter a number to calculate the Collatz conjecture: ");
        int number = reader.nextInt();
        
if(number>0){
        while (number != 1) {
            if (number % 2 == 0) {
                number = number / 2;
            } else {
                number = number * 3 + 1;
            }
            System.out.print(number + " ");
         }
        }
      else{
      return;
    }
 }
}      
      
  

